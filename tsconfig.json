{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": false,
        "skipLibCheck": true,
        "target": "ES6",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true
    }
}